@model G8Cozy.Models.home

@section Style {
    <style>
        .col-sm-2 {
            font-weight: 1000;
            padding: 10px;
            font-family: fangsong;
        }

        .row {
            display: grid;
            grid-template-columns: 1fr 1fr;
        }
    </style>
}

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<hr />

<div>
    <div class="row">
        <div>
            <img src="@Html.DisplayFor(model => model.Image)" width="100%" />
        </div>
        <div heigth:100vh;>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    Built Size (m2)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SquareFeet)
                </dd>
                
                <dt class="col-sm-2">
                    Location
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HomeType)
                </dd>
                
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Room)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Room)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Bath)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Bath)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Floor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Floor)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ContactNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ContactNumber)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsSell)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.IsSell)
                    {
                        <text>Yes</text>
                    }
                    else
                    {
                        <text>No</text>
                    }
                </dd>
                <dt class="col-sm-2">
                    <text>IsRent</text>
                </dt>
                <dd class="col-sm-10">
                    @if (!Model.IsSell)
                    {
                        <text>Yes</text>
                    }
                    else
                    {
                        <text>No</text>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HavePool)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.HavePool)
                    {
                        <text>Yes</text>
                    }
                    else
                    {
                        <text>No</text>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HaveOnSiteParking)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.HaveOnSiteParking)
                    {
                        <text>Yes</text>
                    }
                    else
                    {
                        <text>No</text>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HavePark)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.HavePark)
                    {
                        <text>Yes</text>
                    }
                    else
                    {
                        <text>No</text>
                    }
                </dd>

            </dl>
            <div style="width:100%;height:30px;text-align:right">
                <a asp-action="Index" style="text-decoration:none;color:#dde; border:3px solid #dde; background:#210; padding:10px;margin:10px; border-radius:18px;">Back to List =></a>
            </div>
        </div>

    </div>
</div>
